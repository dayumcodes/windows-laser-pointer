<Window
    x:Class="LaserPointer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Laser Pointer Settings">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Laser Pointer Settings" 
            FontSize="24" 
            FontWeight="Bold" 
            Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20">
                <!-- Color Preset -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Color Preset" FontWeight="SemiBold"/>
                    <ComboBox x:Name="ColorPresetComboBox" SelectionChanged="ColorPresetComboBox_SelectionChanged">
                        <ComboBoxItem Content="Red" Tag="Red"/>
                        <ComboBoxItem Content="Green" Tag="Green"/>
                        <ComboBoxItem Content="Blue" Tag="Blue"/>
                        <ComboBoxItem Content="Yellow" Tag="Yellow"/>
                        <ComboBoxItem Content="Purple" Tag="Purple"/>
                        <ComboBoxItem Content="Orange" Tag="Orange"/>
                    </ComboBox>
                </StackPanel>

                <!-- Fade Duration -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Fade Duration (seconds)" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Slider 
                            x:Name="FadeDurationSlider" 
                            Minimum="1" 
                            Maximum="5" 
                            Value="2" 
                            Width="300"
                            ValueChanged="FadeDurationSlider_ValueChanged"/>
                        <TextBlock x:Name="FadeDurationValue" Text="2.0" MinWidth="40"/>
                    </StackPanel>
                </StackPanel>

                <!-- Line Thickness -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Line Thickness (pixels)" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Slider 
                            x:Name="LineThicknessSlider" 
                            Minimum="1" 
                            Maximum="10" 
                            Value="3" 
                            Width="300"
                            ValueChanged="LineThicknessSlider_ValueChanged"/>
                        <TextBlock x:Name="LineThicknessValue" Text="3" MinWidth="40"/>
                    </StackPanel>
                </StackPanel>

                <!-- Window Background Color -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Window Background Color" FontWeight="SemiBold"/>
                    <ComboBox x:Name="WindowBackgroundColorComboBox" SelectionChanged="WindowBackgroundColorComboBox_SelectionChanged">
                        <ComboBoxItem Content="Transparent" Tag="Transparent"/>
                        <ComboBoxItem Content="Black" Tag="Black"/>
                        <ComboBoxItem Content="White" Tag="White"/>
                        <ComboBoxItem Content="Dark Gray" Tag="DarkGray"/>
                        <ComboBoxItem Content="Light Gray" Tag="LightGray"/>
                    </ComboBox>
                    <TextBlock 
                        Text="Controls the background color of the overlay window. Use Transparent for true transparency (if supported)." 
                        FontSize="12" 
                        Foreground="Gray" 
                        TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Hotkey Info -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Activation Hotkey" FontWeight="SemiBold"/>
                    <TextBlock Text="Ctrl + Shift + L" FontStyle="Italic" Foreground="Gray"/>
                    <TextBlock 
                        Text="Press the hotkey to toggle the laser pointer overlay on/off" 
                        FontSize="12" 
                        Foreground="Gray" 
                        TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

         <!-- Buttons -->
        <StackPanel 
            Grid.Row="2" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            Spacing="10" 
            Margin="0,20,0,0">
            <Button 
                Content="Reset to Defaults" 
                Click="ResetButton_Click"/>
            <Button 
                Content="Apply" 
                Click="ApplyButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
